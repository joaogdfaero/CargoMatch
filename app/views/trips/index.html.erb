<style>
  #trips {
    table-layout: auto;
    width: 90%;
    margin: auto;
    border-collapse: collapse;
  }

  #trips th,
  #trips td {
    text-align: center;
    padding: 10px;
    border: 1px solid #ccc;
  }

  #trips th {
    background-color: #f2f2f2;
  }

  #trips tbody tr:nth-child(even) {
    background-color: #f9f9f9;
  }

  #trips tbody tr:hover {
    background-color: #e0e0e0;
  }

  .search-container {
    width: 100%;
    margin: auto;
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    margin-bottom: 20px;
    margin-right: 10px;
  }

  .search-box {
    width: 100%;
    padding: 10px;
    background-color: #f2f2f2;
    border: 1px solid #ccc;
    border-radius: 10px;
    margin-right: 10px;
  }

  .search-box label,
  .search-box input[type="text"],
  .search-box .actions {
    width: 100%;
    margin-bottom: 10px;
  }

  /* Clear floating elements after the search box and the grid */
  .clear {
    clear: both;
  }
  
</style>

<p style="color: green"><%= notice %></p>
<h1>Trips</h1>
<div class="search-container">
  <div class="search-box">
    <%= search_form_for @q do |f| %> 
      <%= f.label :departure_location %>
      <%= f.text_field :departure_location_cont, class: 'form-control' %>

      <%= f.label :arrival_location %>
      <%= f.text_field :arrival_location_cont, class: 'form-control' %>

      <%= f.label :departure_date %>
      <%= f.text_field :departure_date_cont, class: 'form-control', placeholder: 'dd/mm/yyyy' %>

      <%= f.label :arrival_date %>
      <%= f.text_field :arrival_date_cont, class: 'form-control', placeholder: 'dd/mm/yyyy' %>

      <%= f.label :trip_type %>
      <%= f.text_field :trip_type_cont, class: 'form-control' %>

      <div class="actions">
        <%= f.submit class: 'btn btn-primary' %>
        <%= link_to "Clear", request.path, class: "btn btn-default" %>
      </div>

      <%= link_to "New trip", new_trip_path, class: 'btn btn-default btn-gray' %>
    <% end %>
  </div>

  <table id="trips">
    <thead>
      <tr>
        <th>Departure Location</th>
        <th>Arrival Location</th>
        <th>Departure Date</th>
        <th>Arrival Date</th>
        <th>Departure Time</th>
        <th>Arrival Time</th>
        <th>Trip Type</th>
        <th>Participants</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @trips.each do |trip| %>
        <tr>
          <td><%= trip.departure_location %></td>
          <td><%= trip.arrival_location %></td>
          <td><%= trip.departure_date.strftime('%d/%m/%Y') %></td>
          <td><%= trip.arrival_date.strftime('%d/%m/%Y') %></td>
          <td><%= trip.departure_time.strftime('%H:%M:%S %Z') %></td>
          <td><%= trip.arrival_time.strftime('%H:%M:%S %Z') %></td>
          <td><%= trip.trip_type %></td>
          <td>
          <% trip.participants.each do |participant| %>
            <%= participant %><br>
          <% end %>
          </td>
          <td>
            <%= link_to "Detalhes", trip, class: "btn btn-primary", style: "margin-bottom: 5px;"%>
            <% if current_user && !trip.user.eql?(current_user) %>
              <% if trip.trip_type == 'Oferecida'%>
                <%= link_to "Solicitar frete", join_trip_path(trip), method: :post, class: "btn btn-primary"%>
              <% else %>
                <%= link_to "Oferecer frete", join_trip_path(trip), method: :post, class: "btn btn-primary" %>
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


