<p style="color: green"><%= notice %></p>

<%= render @trip %>

<div>
  <% if current_user && @trip.user.eql?(current_user) %>
    <% if @trip.requested_participants.any? %>
      <%= link_to "Manage Requests |", manage_requests_trip_path(@trip)%> 
    <% end %>
  <% end %>
  <%= link_to "Edit this trip", edit_trip_path(@trip) %> |
  <%= link_to "Back to trips", trips_path %>

  <%= button_to "Destroy this trip", @trip, method: :delete %>
</div>
